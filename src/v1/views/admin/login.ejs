<body class="hold-transition login-page">
    <div class="login-box" id="AppVue">
        <div class="login-logo">
            <b>Workflow</b>
        </div>

        <div class="alert alert-info">Carregando...</div>
    </div>
    <!-- /.login-box -->

    <!-- jQuery 3 -->
    <script src="/v1/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/v1/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- VueJS -->
    <script src="/v1/bower_components/vue/dist/vue.min.js"></script>
    <!-- axios -->
    <script src="/v1/bower_components/axios/dist/axios.min.js"></script>

    <script>
        function callback(response) {
            console.log('response', response);
            window.location.replace('/admin/v1');
            return;
        }

        const urlParams = new URLSearchParams(window.location.search);
        const token = urlParams.get('token');
        console.log('token', token);

        if (token) {
            axios.post('/admin/v1/login', {
                token,
            })
                .then(function (response) {
                    callback(response.data);
                })
                .catch(function (err) {
                    callback(err.response.data);
                });
        }
    </script>
</body>

